<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/play_bt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="240dp"
        android:layout_marginEnd="241dp"
        android:background="@drawable/panel_button"
        android:fontFamily="@font/galindo"
        android:onClick="selectDifficulty"
        android:text="Play"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/quit_bt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="241dp"
        android:background="@drawable/panel_button"
        android:fontFamily="@font/galindo"
        android:onClick="quit"
        android:text="quit"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/highScore_bt" />

    <Button
        android:id="@+id/how2Play_bt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="241dp"
        android:background="@drawable/panel_button"
        android:fontFamily="@font/galindo"
        android:onClick="howToPlay"
        android:text="How to play?"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play_bt" />

    <Button
        android:id="@+id/highScore_bt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="241dp"
        android:background="@drawable/panel_button"
        android:fontFamily="@font/galindo"
        android:onClick="highScore"
        android:text="High score"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/how2Play_bt" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="442dp"
        android:layout_height="146dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/title" />

</androidx.constraintlayout.widget.ConstraintLayout>