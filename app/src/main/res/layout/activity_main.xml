<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="466dp"
        android:layout_height="70dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="132dp"
        android:fontFamily="@font/galindo"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/highScore_bt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="241dp"
        android:fontFamily="@font/galindo"
        android:onClick="highScore"
        android:text="High score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/how2Play_bt" />

    <Button
        android:id="@+id/how2Play_bt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="241dp"
        android:fontFamily="@font/galindo"
        android:onClick="howToPlay"
        android:text="How to play?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play_bt" />

    <Button
        android:id="@+id/play_bt"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="241dp"
        android:fontFamily="@font/galindo"
        android:onClick="selectDifficulty"
        android:text="Play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>