<?xml version="1.0" encoding="utf-8"?>
   <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B7B7B7">


    <android.widget.Button
        android:id="@+id/clear_bt"
        android:layout_width="60dp"
        android:layout_height="dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/panel_button"
        android:onClick="clear"
        android:text="clear"
        app:layout_constraintEnd_toStartOf="@+id/guideline13"
        app:layout_constraintTop_toBottomOf="@+id/undo_bt" />

    <android.widget.Button
        android:id="@+id/undo_bt"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/panel_button"
        android:text="del"
        app:layout_constraintEnd_toStartOf="@+id/guideline13"
        app:layout_constraintTop_toTopOf="@+id/guideline12" />

    <android.widget.Button
        android:id="@+id/close_bt"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/panel_button"
        android:onClick="closeParentheses"
        android:text=")"
        app:layout_constraintBottom_toTopOf="@+id/guideline14"
        app:layout_constraintStart_toEndOf="@+id/open_bt"
        app:layout_constraintTop_toBottomOf="@+id/green_bt" />

    <android.widget.Button
        android:id="@+id/open_bt"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/panel_button"
        android:onClick="openParentheses"
        android:text="("
        app:layout_constraintBottom_toTopOf="@+id/guideline14"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toBottomOf="@+id/red_bt" />

    <android.widget.Button
     android:id="@+id/blue_bt"
     android:layout_width="75dp"
     android:layout_height="75dp"
     android:background="@drawable/blue_button"
     android:onClick="blueClick"
     app:layout_constraintStart_toStartOf="@+id/guideline11"
     app:layout_constraintTop_toTopOf="@+id/guideline12" />

    <android.widget.Button
        android:id="@+id/yellow_bt"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/yellow_button"
        android:onClick="yellowClick"
        app:layout_constraintStart_toEndOf="@+id/blue_bt"
        app:layout_constraintTop_toTopOf="@+id/guideline12" />

    <android.widget.Button
        android:id="@+id/red_bt"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/red_button"
        android:onClick="redClick"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toBottomOf="@+id/blue_bt" />

    <android.widget.Button
        android:id="@+id/green_bt"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/green_button"
        android:onClick="greenClick"
        app:layout_constraintStart_toEndOf="@+id/red_bt"
        app:layout_constraintTop_toBottomOf="@+id/yellow_bt" />

    <androidx.constraintlayout.widget.Guideline
     android:id="@+id/guideline11"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.41" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"  />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.94" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/message_box"
        android:fontFamily="@font/digital7"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/red"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline13"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/message_box"
        android:fontFamily="@font/digital7mono"
        android:gravity="center"
        android:text=""
        android:textColor="@color/red"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline15"
        app:layout_constraintStart_toStartOf="@+id/guideline16"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/plus_bt"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/panel_button"
        android:onClick="plus"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/guideline16"
        app:layout_constraintTop_toTopOf="@+id/guideline12" />

    <android.widget.Button
        android:id="@+id/enter_bt"
        android:layout_width="164dp"
        android:layout_height="68dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/panel_button"
        android:onClick="showAns"
        android:text="Enter"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline14"
        app:layout_constraintStart_toStartOf="@+id/guideline16"
        app:layout_constraintTop_toBottomOf="@+id/multiply_bt" />

    <android.widget.Button
        android:id="@+id/minus_bt"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/panel_button"
        android:onClick="minus"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/plus_bt"
        app:layout_constraintTop_toTopOf="@+id/guideline12" />

    <android.widget.Button
        android:id="@+id/multiply_bt"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/panel_button"
        android:onClick="multiply"
        android:text="*"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/guideline16"
        app:layout_constraintTop_toBottomOf="@+id/plus_bt" />

    <android.widget.Button
        android:id="@+id/divide_bt"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/panel_button"
        android:onClick="divide"
        android:text="/"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/multiply_bt"
        app:layout_constraintTop_toBottomOf="@+id/minus_bt" />

    <android.widget.Button
        android:id="@+id/power_bt"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="7dp"
        android:background="@drawable/panel_button"
        android:onClick="power"
        android:text="^"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline15"
        app:layout_constraintStart_toEndOf="@+id/divide_bt"
        tools:layout_editor_absoluteY="156dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.54" />

</androidx.constraintlayout.widget.ConstraintLayout>