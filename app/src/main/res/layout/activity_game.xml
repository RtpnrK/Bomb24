<?xml version="1.0" encoding="utf-8"?>
   <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B7B7B7">


    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guideline13"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toTopOf="@+id/guideline12">

        <Button
            android:id="@+id/blue_bt"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:background="@drawable/blue_button"
            android:fontFamily="@font/galindo"
            android:onClick="blueClick"
            android:textSize="30sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/yellow_bt"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:background="@drawable/yellow_button"
            android:fontFamily="@font/galindo"
            android:onClick="yellowClick"
            android:textSize="30sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline13"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toBottomOf="@+id/tableRow3">

        <Button
            android:id="@+id/red_bt"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:background="@drawable/red_button"
            android:fontFamily="@font/galindo"
            android:onClick="redClick"
            android:textSize="30sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/green_bt"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:background="@drawable/green_button"
            android:fontFamily="@font/galindo"
            android:onClick="greenClick"
            android:textSize="30sp" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline13"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toBottomOf="@+id/tableRow4">

        <Button
            android:id="@+id/open_bt"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:background="@drawable/panel_button"
            android:fontFamily="@font/galindo"
            android:onClick="openParentheses"
            android:text="("
            android:textSize="30sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/close_bt"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:background="@drawable/panel_button"
            android:fontFamily="@font/galindo"
            android:onClick="closeParentheses"
            android:text=")"
            android:textSize="30sp" />
    </TableRow>

    <androidx.constraintlayout.widget.Guideline
     android:id="@+id/guideline11"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.41" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.27" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/message_box"
        android:fontFamily="@font/digital7"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/red"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline13"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.88" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline15"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="@+id/guideline16"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ans_tv"
            android:layout_width="120dp"
            android:layout_height="49dp"
            android:background="@drawable/message_box"
            android:fontFamily="@font/digital7mono"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="30sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:background="@drawable/message_box"
            android:fontFamily="@font/digital7mono"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="30sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guideline15"
        app:layout_constraintStart_toStartOf="@+id/guideline16"
        app:layout_constraintTop_toTopOf="@+id/guideline12">

        <Button
            android:id="@+id/plus_bt"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/panel_button"
            android:enabled="false"
            android:fontFamily="@font/galindo"
            android:onClick="plus"
            android:text="+"
            android:textSize="30sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/minus_bt"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/panel_button"
            android:enabled="false"
            android:fontFamily="@font/galindo"
            android:onClick="minus"
            android:text="-"
            android:textSize="30sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/power_bt"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/panel_button"
            android:enabled="false"
            android:fontFamily="@font/galindo"
            android:onClick="power"
            android:text="^"
            android:textSize="30sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline15"
        app:layout_constraintStart_toStartOf="@+id/guideline16"
        app:layout_constraintTop_toBottomOf="@+id/tableRow2">

        <Button
            android:id="@+id/multiply_bt"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/panel_button"
            android:enabled="false"
            android:fontFamily="@font/galindo"
            android:onClick="multiply"
            android:text="*"
            android:textSize="30sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/divide_bt"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/panel_button"
            android:enabled="false"
            android:fontFamily="@font/galindo"
            android:onClick="divide"
            android:text="/"
            android:textSize="30sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/undo_bt"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/panel_button"
            android:enabled="true"
            android:fontFamily="@font/galindo"
            android:onClick="undo"
            android:text="del"
            android:textSize="30sp" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline15"
        app:layout_constraintStart_toStartOf="@+id/guideline16"
        app:layout_constraintTop_toBottomOf="@+id/tableRow">

        <Button
            android:id="@+id/enter_bt"
            android:layout_width="160dp"
            android:layout_height="75dp"
            android:background="@drawable/panel_button"
            android:fontFamily="@font/galindo"
            android:onClick="showAns"
            android:text="Enter"
            android:textSize="30sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/clear_bt"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/panel_button"
            android:fontFamily="@font/galindo"
            android:onClick="clear"
            android:text="clr"
            android:textSize="30sp" />
    </TableRow>

    <TextView
        android:id="@+id/mode_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline11" />

    <ImageView
        android:id="@+id/blur_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blur_white" />

    <ImageView
        android:id="@+id/menu_bt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="menuOpen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline15"
        app:srcCompat="@drawable/ic_baseline_menu_24" />

    <Button
        android:id="@+id/resume_bt"
        android:layout_width="208dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/panel_button"
        android:fontFamily="@font/galindo"
        android:onClick="resume"
        android:text="Resume"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline12" />

    <Button
        android:id="@+id/change_bt"
        android:layout_width="208dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/panel_button"
        android:fontFamily="@font/galindo"
        android:onClick="changeDifficulty"
        android:text="change difficulty"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resume_bt" />

    <Button
        android:id="@+id/mainMenu_bt"
        android:layout_width="208dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/panel_button"
        android:fontFamily="@font/galindo"
        android:onClick="mainMenu"
        android:text="main menu"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_bt" />

</androidx.constraintlayout.widget.ConstraintLayout>